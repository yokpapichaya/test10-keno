                    <input type="hidden" value="{{ content.ID }},{{ content.casino_prefix }}" class="getlink"/>
                    {# <div class="box-product__image"><img src="{{ TimberImage(box.casino_block_logo).src }}"></div>
                    <div class="box-product__detail">
                        <h3>{{ content.post_title }}</h3>
                    </div> #}
                    <div class="btn btn-game" id="{{ content.ID }}">เล่นเกม</div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</section>

{% endblock %}